{
  "name": "ppmserver",
  "version": "0.0.1",
  "description": "A server for the PPM apps. ",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "start": "nodemon  --es-module-specifier-resolution=node ./index.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ntuboys/PpmServer.git"
  },
  "author": "Arkadiusz Michalski",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ntuboys/PpmServer/issues"
  },
  "homepage": "https://github.com/ntuboys/PpmServer#readme",
  "dependencies": {
    "bcrypt": "^4.0.0",
    "body-parser": "^1.20.1",
    "expres": "0.0.5",
    "express": "^4.18.2",
    "helmet": "^3.21.2",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.9.2",
    "node-fetch": "^2.6.0",
    "randomstring": "^1.1.5",
    "request": "^2.88.2"
  },
  "devDependencies": {
    "eslint": "^6.8.0",
    "eslint-config-strict": "^14.0.1",
    "nodemon": "^2.0.2"
  },
  "eslintConfig": {
    "extends": [
      "strict"
    ],
    "rules": {
      "filenames/match-regex": 0,
      "func-style": "off",
      "no-console": "off",
      "no-underscore-dangle": "off",
      "id-blacklist": "off"
    }
  }
}
